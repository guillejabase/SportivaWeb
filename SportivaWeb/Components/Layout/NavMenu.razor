@using SportivaWeb.Models
@rendermode InteractiveServer

<div class="navmenu">
	<input type="checkbox"
		   id="navmenu-toggle"
		   class="navmenu-icon" />
	<label for="navmenu-toggle"
		   class="navmenu-icon">
		<FluentIcon Value="@(new Icons.Regular.Size20.Navigation())"
					Color="Color.Fill" />
	</label>
	<nav class="sitenav"
		 aria-labelledby="main-menu">
		<FluentNavMenu Id="main-menu"
					   Collapsible="true"
					   Width="250"
					   Title="Navigation menu"
					   CustomToggle="true"
					   @bind-Expanded="expanded">
			@foreach (var item in navItems)
			{
				<FluentNavLink Href="@item.Ruta"
							   Match="NavLinkMatch.All"
							   Icon="@item.Icono"
							   IconColor="Color.Accent"
							   Tooltip="@item.Titulo">
					@item.Titulo
				</FluentNavLink>
			}
		</FluentNavMenu>
	</nav>
</div>

@code {
	private bool expanded = true;

	private List<NavItem> navItems = new()
	{
		new() { Ruta = "/menu/eventos", Icono = new Icons.Regular.Size24.BoxMultiple(), Titulo = "Eventos" },
		new() { Ruta = "/menu/usuarios", Icono = new Icons.Regular.Size24.People(), Titulo = "Usuarios" }
	};
}
